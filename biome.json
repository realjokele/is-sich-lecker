{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "files": {
    "ignore": ["src/routeTree.gen.ts"]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "defaultBranch": "main",
    "useIgnoreFile": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 120
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "recommended": true,
        "noConsole": "warn"
      },
      "style": {
        "recommended": true,
        "noUnusedTemplateLiteral": "warn"
      },
      "complexity": {
        "recommended": true
      },
      "security": {
        "recommended": true
      },
      "performance": {
        "recommended": true
      },
      "correctness": {
        "recommended": true,
        "noUnusedImports": "info",
        "noUnusedVariables": "off",
        "noUnusedLabels": "error",
        "noUnusedFunctionParameters": "info",
        "noChildrenProp": "off"
      },
      "a11y": {
        "recommended": true,
        "useKeyWithClickEvents": "warn",
        "useButtonType": "off"
      },
      "nursery": {
        "recommended": true,
        "noProcessEnv": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single"
    }
  }
}
